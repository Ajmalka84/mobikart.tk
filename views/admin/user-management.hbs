<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>


<main class="main" id="main">
<section style="background-color:rgba(244, 244, 241, 0.945)">
            <h3 class="text-center pt-3">User Management</h3>
    <div class="container">
         <div class="mt-3">
         </div>     
      <div>
      <table class="table" id="myTable">
  <thead>
    <tr class="text-center bg-white border">
      
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white">
    {{#each response}}
    <tr class="text-center">
      
      <td>{{this.name}}</td>  
      <td>{{this.email}}</td>
      <td>{{this.mobile}}</td>
      {{#if this.status}}      
      <td><a href="/admin/usermanagement/block/{{this._id}}"><button class="btn btn-danger" onclick="return confirm ('Do you want to block {{this.name}}')">Block</button></a></td>
       {{else}}
       <td><a href="/admin/usermanagement/unblock/{{this._id}}"><button class="btn btn-success" onclick="return confirm ('Do you want to Unblock {{this.name}}')">Unblock</button></a></td>
       {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
    </div>
</section>
</main>

