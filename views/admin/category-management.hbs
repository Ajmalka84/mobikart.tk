<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>


<main class="main" id="main">
<section style="background-color:rgba(244, 238, 238, 0.904)">
   <h3 class="text-center pt-3">Category Management</h3>
    <div class="container ">
         <div class="">
            <div class="row m-4 d-flex justify-content-end">
             <a href="/admin/categorymanagement/add" style="width:auto" class="btn btn-success">Add Category</a>
         </div>     
      <div>
      <table class="table" id="myTable">
  <thead>
    <tr class="text-center bg-white border">
      
      <th scope="col">Category Name</th>
      <th scope="col">Offer (%)</th>
      <th scope="col">Category Image</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white">
      {{#each response}}
    <tr class="text-center">
      
      <td>{{this.brand}}</td>
      {{#if this.categoryOffer}}
      <td>{{this.categoryOffer}}</td>
      {{else}}
      <td>nil</td>
      {{/if}}
      <td><img src="/images/product/{{this.img}}" style="width:50px ;height: 50px" alt=""></td>
            
      <td><a href="/admin/categorymanagement/edit/{{this._id}}"><button class="btn btn-danger" onclick="return confirm ('Do you want to edit {{this.brand}}')">Edit</button></a>&nbsp;&nbsp;&nbsp;<a href="/admin/categorymanagement/delete/{{this._id}}"><button class="btn btn-success" onclick="return confirm ('Do you want to delete {{this.brand}}')">Delete</button></a></td>
      
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
    </div>
</section>
</main>

<script>

 $(document).ready(function(){
        $('#myTable').DataTable();
    });

</script>
