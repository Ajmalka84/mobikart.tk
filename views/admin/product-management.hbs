<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>

<main class="main" id="main">
<section style="background-color:rgba(244, 238, 238, 0.904)">
    <div class="container mt-5 p-5">
         <div class="">
            <div class="row m-4 d-flex justify-content-end">
             <a href="/admin/productmanagement/addproduct" style="width:auto" class="btn btn-success">Add Product</a>
         </div>     
      <div>
<table class="table" id="myTable">
  <thead>
    <tr class="text-center bg-white border">
      
      <th scope="col">Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Price</th>
      <th scope="col">Offer(%)</th>
      {{!-- <th scope="col">Price after Offer</th> --}}
      <th scope="col">Image</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="bg-white align-center ">
    {{#each response}}
    <tr class="text-center">     
      <td>{{this.name}}</td>  
      <td>{{this.brand}}</td>
      <td>₹ {{this.price}}</td>
      {{#if this.productOffer}}
      <td>{{this.productOffer}}</td>
      {{else}}
      <td>-</td>
      {{/if}}

      {{!-- {{#if this.productTotal}}
      <td>₹ {{this.productTotal}}</td>
      {{else}}
      <td>-</td>
      {{/if}} --}}
      <td><img src="/images/product/{{this.img.[0]}}" style="width:50px ;height: 50px"  alt=""></td>
            
      <td><a href="/admin/productmanagement/editproduct/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/productmanagement/deleteproduct/{{this._id}}" class="btn btn-danger">Delete</a></td>
       
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
    </div>
</section>
</main>


