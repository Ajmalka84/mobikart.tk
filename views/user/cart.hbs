		<script>
			
		   function addQuantity(cartId,productId,count,price){
			
			let quantity =parseInt(document.getElementById(productId).innerHTML)
			$.ajax({
				url:'/cart/addQuantity',
				data:{
					cart:cartId,
					product:productId,
					count:count,
					quantity :quantity
				},
				method:'post',
				success:(response)=>{
					console.log(response)
					if(response.removeProduct){					
                        location.reload()					   
					}else{
					 let couponamt= document.getElementById('couponAmt').innerHTML
					 document.getElementById('subtotal').innerHTML= response.grandtotal[0].grandtotal-couponamt
					 document.getElementById('grandTotal').innerHTML= response.grandtotal[0].grandtotal
					 document.getElementById(productId).innerHTML = quantity + count
					 let total = document.getElementById('price'+productId).innerHTML=  (quantity+count) * price
					 document.getElementById('price1'+productId).innerHTML=total     
					}
			    }
			})
		   }

		  
		   function removeProduct(cartId,productId){
			            
			  console.log(typeof(cartId,productId))
			  $.ajax({
				url:'/cart/removeProduct',
				data:{
					cart:cartId,
					product:productId
				},
				method:'post',
				success:(response)=>{
					Swal.fire({
                            icon: "success",
                            title: "Item added to cart",
                            showConfirmButton: false,
                            timer: 1500
                        }) 					
                    location.reload()   
			    }
			}
		   )}

		   $('#couponCheck').submit((e)=>{
			 e.preventDefault()

			 $.ajax({
				url: '/coupon-validate',
				type: 'patch',
				data : $("#couponCheck").serialize(),
				success: (response)=>{
					if(response.status){
						  Swal.fire("Good job!", "Coupon applied!", "success");
                         document.getElementById('couponAmt').innerHTML=response.couponAmount
					}else{
					     
                         Swal.fire("Good job!", "Coupon not found!", "error");
                       
					}
				}
			 })
		   })
		</script>