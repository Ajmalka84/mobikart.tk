<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>


       <main class="main">
        	<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        		<div class="container">
        			<h1 class="page-title">Order History</h1>
        		</div><!-- End .container -->
        	</div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Profile</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Order History</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">
            	<div class="container">
					
					<table id="table"  class="table table-wishlist table-mobile text-center">
						<thead>
							<tr>
                                <th>No.</th>
                                <th>Order date</th>
								<th>Name</th>
                                <th>PIN</th>
                                <th>Payment</th>
                                <th>Sub Total</th>
								<th>coupon Discount</th>
								<th>Order Total</th>
								<th>Order Id</th>
								<th>Status</th>
								<th> </th>
							</tr>
						</thead>

						<tbody >
                            {{#each response}}
							
							<tr>
                                <td ></td>
								<td>{{this.date}}</td>
								<td>{{this.address.firstname}} {{this.address.lastname}}</td>
								
                                <td>{{this.address.pin}}</td>
								<td>{{this.paymentMethod}}</td>
								<td >₹{{this.total}}</td>
								{{#if this.couponDiscount}}
								<td >₹{{this.couponDiscount}}</td>
								{{else}}
								<td>nil</td>
								{{/if}}
								{{#if this.priceAfterCoupondiscount}}
								<td>₹{{this.priceAfterCoupondiscount}}</td>
								{{else}}
								<td>{{this.total}}</td>
								{{/if}}
                                <td>{{this._id}}</td>
                                <td>{{this.status}}</td>
								
								<td class="remove-col">
								<a href="/viewdetails/{{this._id}}"><button type="submit" class="btn btn-outline-danger ">View Details</button></a></td>
							</tr>
                            {{/each}}
						</tbody>
					</table><!-- End .table table-wishlist -->
	            	<div class="wishlist-share">
	            		<div class="social-icons social-icons-sm mb-2">
	            			<label class="social-label">Share on:</label>
	    					<a href="#" class="social-icon" title="Facebook" target="_blank"><i class="icon-facebook-f"></i></a>
	    					<a href="#" class="social-icon" title="Twitter" target="_blank"><i class="icon-twitter"></i></a>
	    					<a href="#" class="social-icon" title="Instagram" target="_blank"><i class="icon-instagram"></i></a>
	    					<a href="#" class="social-icon" title="Youtube" target="_blank"><i class="icon-youtube"></i></a>
	    					<a href="#" class="social-icon" title="Pinterest" target="_blank"><i class="icon-pinterest"></i></a>
	    				</div><!-- End .soial-icons -->
	            	</div><!-- End .wishlist-share -->
            	</div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->

<script>
  $(document).ready(function(){
        $('#table').DataTable();
    });


  var table = document.getElementsByTagName('table')[0],
    rows = table.getElementsByTagName('tr'),
    text = 'textContent' in document ? 'textContent' : 'innerText';

  for (var i = 1, len = rows.length; i < len; i++) {
    rows[i].children[0][text] = i;
  }

</script>
